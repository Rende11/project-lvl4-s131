extends /layouts/application.pug

block content
  +jumb  
    +formFor(form, errors, { url: urlFor('statusesUpdate', form.id), method: 'patch' })
      +input(form, errors, 'name', { label: 'Status name' })
      +button(form, { type: 'submit', value: 'Save changes', class: 'btn-block'})
    +formFor(form, errors, { url: urlFor('statusesDelete', form.id), method: 'delete' })(data-confirm="Are you sure you want to delete?")
      +button(form, { type: 'submit', value: 'Delete status', class: 'btn-danger btn-block' })