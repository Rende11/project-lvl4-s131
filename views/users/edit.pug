extends /layouts/application.pug

block content
  +jumb  
    +formFor(form, errors, { url: urlFor('usersUpdate', user.id), method: 'patch' })
      +input(form, errors, 'firstName', { label: 'First Name' })
      +input(form, errors, 'lastName', { label: 'Last Name' })
      +input(form, errors, 'email', { label: 'Email' })
      +button(form, { type: 'submit', value: 'Save changes', class: 'btn-block'})
    +formFor(form, errors, { url: urlFor('usersDelete', user.id), method: 'delete' })(data-confirm="Are you sure you want to delete?")
      +button(form, { type: 'submit', value: 'Delete user', class: 'btn-danger btn-block' })
  