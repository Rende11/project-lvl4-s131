include /mixins/forms.pug

doctype html
html(lang="en")
  head
    title= Title
    script(src='/assets/vendor.js')
    script(src='/assets/app.js')
  body
    nav.navbar.navbar-toggleable-md.navbar-light.bg-faded.breadcrumb
      a.navbar-brand(href='/')
        img.d-inline-block(src='https://png.icons8.com/ios/100/000000/checked-checkbox.png', width="30" height="30" alt="")
        |  TaskManager
      form.form-inline.ml-auto
        if user.isSigned()
          nav-item.mx-1
            a.nav-link(href=urlFor('users')) Users
          nav-item.mx-1
            a.nav-link(href=urlFor('tasks')) Tasks
          nav-item.mx-1
            a.nav-link(href=urlFor('user', user.id)) #{user.name} 
          a.btn.btn-outline-secondary.mx-1(href="/session", data-method='delete' rel='nofollow' role="button") Log out
        else 
          a.btn.btn-outline-primary.mx-1(href=urlFor('userNew'), role="button") Sign up
          a.btn.btn-outline-secondary.mx-1(href=urlFor('session'), role="button") Log in 
    - const msg = flash.get();
    if msg
      .alert.alert-info.m-3= msg
    +alert(flash)
    block content